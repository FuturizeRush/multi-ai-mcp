# Multi-AI MCP Server Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# CLI Paths (Optional - auto-detected if in PATH)
# =============================================================================

# Claude CLI path
# CLAUDE_CLI_PATH=/Users/yourname/.nvm/versions/node/v24.11.1/bin/claude

# Codex CLI path
# CODEX_CLI_PATH=/Users/yourname/.nvm/versions/node/v24.11.1/bin/codex

# Gemini CLI path
# GEMINI_CLI_PATH=/opt/homebrew/bin/gemini

# Antigravity (VS Code) CLI path
# ANTIGRAVITY_CLI_PATH=/Users/yourname/.antigravity/antigravity/bin/antigravity

# =============================================================================
# Default Models
# =============================================================================

# Claude default model (sonnet/opus/haiku)
CLAUDE_DEFAULT_MODEL=sonnet

# Codex default model
CODEX_DEFAULT_MODEL=o4-mini

# =============================================================================
# API Keys (Optional - for API fallback if CLI fails)
# =============================================================================

# Anthropic API Key for Claude
# ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API Key for Codex
# OPENAI_API_KEY=sk-...

# Google API Key for Gemini
# GOOGLE_API_KEY=AIza...

# =============================================================================
# Timeouts (in seconds)
# =============================================================================

# Default timeout for CLI operations
CLAUDE_TIMEOUT=300
CODEX_TIMEOUT=300
GEMINI_TIMEOUT=300
ANTIGRAVITY_TIMEOUT=30

# =============================================================================
# Security Settings
# =============================================================================

# Maximum prompt length (characters)
MAX_PROMPT_LENGTH=100000

# Enable prompt injection detection
ENABLE_PROMPT_INJECTION_FILTER=true

# Enable path security validation
ENABLE_PATH_VALIDATION=true

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Log API keys (DANGEROUS - only for debugging)
LOG_API_KEYS=false
